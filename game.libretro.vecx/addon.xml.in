<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.vecx"
		name="GCE - Vectrex (vecx)"
		version="1.2.0.42"
		provider-name="Valavan Manohararajah, John Hawthorn, Nikita Zimin, Demeth">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.vectrex" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>vecx</platforms>
		<extensions>bin|vec</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>true</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.vecx</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<summary lang="da_DK">GCE - Vectrex (vecx)</summary>
		<summary lang="en_GB">GCE - Vectrex (vecx)</summary>
		<summary lang="es_ES">GCE - Vectrex (vecx)</summary>
		<summary lang="zh_CN">GCE - Vectrex (vecx)</summary>
		<description lang="da_DK">Vecx er en Vectrex videospilsystem emulator, der kan køre det meste Vectrex-software.</description>
		<description lang="de_DE">Vecx ist ein Vectrex-Videospielsystem-Emulator. Er kann die meiste Vectrex-Software ausführen.</description>
		<description lang="en_GB">Vecx is a Vectrex video game system emulator. It can run most Vectrex software.</description>
		<description lang="es_ES">Vecx es un emulador del sistema de videojuegos Vectrex. Puede ejecutar la mayoría del software de Vectrex.</description>
		<description lang="zh_CN">Vecx 是 Vectrex 视频游戏系统模拟器。它可以运行大多数 Vectrex 软件。</description>
